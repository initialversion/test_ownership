<div class="page-header">
  <h1>
    Owned things
    <a href="/owned_things/new" class="btn btn-lg btn-success">New Owned thing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @owned_things.each do |owned_thing| %>
      <tr>
        <td><%= owned_thing.user.created_at %></td>
        <td>
          <a href="/owned_things/<%= owned_thing.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == owned_thing.user %>
            <a href="/owned_things/<%= owned_thing.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_owned_thing/<%= owned_thing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @owned_things, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
