<div class="page-header">
  <h3>Owner #<%= @owner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @owner.email %></dd>

      <dt>Password</dt>
      <dd><%= @owner.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/owners" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Owner has many owned_things -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Owned_things
      </li>

      <% @owner.owned_things.each do |owned_thing| %>
        <li class="list-group-item">
          <a href="/owned_things/<%= owned_thing.id %>">
            <%= owned_thing.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/owned_things/<%= owned_thing.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/owned_things/<%= owned_thing.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_owned_thing/<%= owned_thing.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
